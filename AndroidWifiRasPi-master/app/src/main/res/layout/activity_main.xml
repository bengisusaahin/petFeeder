<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jackyle.wifi_rasp.MainActivity">

    <TextView
        android:layout_width="290dp"
        android:layout_height="76dp"
        android:layout_alignStart="@+id/btnUp"
        android:layout_alignEnd="@+id/btnUp"
        android:layout_marginStart="-93dp"
        android:layout_marginEnd="-47dp"
        android:fontFamily="cursive"
        android:text="Pet Feeder"
        android:textAlignment="center"
        android:textColor="#A52020"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ipAddress"
        android:layout_width="238dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="192.168.43.231:21567"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="315dp"
        android:background="#269DD3"
        android:backgroundTint="#880B0B0B"
        android:fontFamily="cursive"
        android:text="Feed"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDown"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUp"
        android:layout_alignStart="@+id/btnUp"
        android:layout_alignEnd="@+id/btnUp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="-3dp"
        android:background="#9C511F1F"
        android:fontFamily="cursive"
        android:text="Refill"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal" />

</RelativeLayout>
